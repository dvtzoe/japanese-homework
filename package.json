{
  "name": "japanese-homework",
  "version": "0.0.0",
  "description": "A tool to do KOSEN KMITL Japanese Homework",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:server": "pnpm -F @jphw/server dev",
    "build": "turbo build",
    "build:server": "pnpm -F @jphw/server build",
    "build:cli": "pnpm -F @jphw/cli build",
    "start": "pnpm -F @jphw/cli start",
    "start:cli": "pnpm -F @jphw/cli start",
    "start:server": "pnpm -F @jphw/server start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "clean": "turbo clean",
    "typecheck": "turbo typecheck"
  },
  "author": "dvtzoe",
  "license": "AGPL-3.0-only",
  "packageManager": "pnpm@10.16.1",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  }
}
