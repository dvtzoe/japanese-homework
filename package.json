{
  "name": "japanese-homework",
  "version": "0.0.0",
  "description": "A tool to do KOSEN KMITL Japanese Homework",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:server": "pnpm -F @jphw/server dev",
    "build": "turbo build",
    "build:server": "pnpm -F @jphw/server build",
    "build:cli": "pnpm -F @jphw/cli build",
    "run": "pnpm -F @jphw/cli run",
    "run:cli": "pnpm -F @jphw/cli run",
    "run:server": "pnpm -F @jphw/server run",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "clean": "turbo clean",
    "typecheck": "turbo typecheck"
  },
  "author": "dvtzoe",
  "license": "AGPL-3.0-only",
  "packageManager": "pnpm@10.16.1",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "turbo": "^2.5.6"
  }
}
